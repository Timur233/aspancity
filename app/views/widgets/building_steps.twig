<section id="buildingSteps" class="building-steps pb-6 pt-6 bg-light">
    <div class="container">
        <h2 class="section-title section-title--green">
            <span class="section-title__aplet section-title__aplet--light">{{ steps_title }}</span>
        </h2>
    </div>

    <div class="container">
        <div class="steps-swiper swiper-container">
            <div class="swiper-wrapper">
                {% for item in building_steps %}
                    <div 
                        class="swiper-slide building-steps__slide" 
                        style="background-image: url('https://cms.abpx.kz{{ item.preview }}')"
                    >
                        {% if item.gallery %}
                            <a class="building-steps__link" href="#" data-gallery-images="{% for img in item.gallery %}https://cms.abpx.kz{{ img.styles[0].path }}{% if loop.last == false  %},{% endif%}{% endfor %}"  onclick="frontend.lightBox(this.getAttribute('data-gallery-images')); return false">
                        {% endif %}  
                            <div class="step-information">
                                <h3 class="building-steps__title">{{ translate[item.format_date.month] }} <br> {{ item.format_date.year }}</h3>
                            </div>
                        {% if item.gallery %}
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</section>